From: Jiri Novotny <jiri.novotny@logicelements.cz>
Date: Thu, 11 May 2017 10:00:39 +0200
Subject: [PATCH 3/4] add xradio wifi support

Signed-off-by: Jiri Novotny <jiri.novotny@logicelements.cz>
---
 arch/arm/boot/dts/sun8i-h2-plus-orangepi-zero.dts | 36 +++++++++++++++++++----
 1 file changed, 31 insertions(+), 5 deletions(-)
 mode change 100644 => 100755 arch/arm/boot/dts/sun8i-h2-plus-orangepi-zero.dts

diff --git a/arch/arm/boot/dts/sun8i-h2-plus-orangepi-zero.dts b/arch/arm/boot/dts/sun8i-h2-plus-orangepi-zero.dts
old mode 100644
new mode 100755
index 2f25026..b05b3a1
--- a/arch/arm/boot/dts/sun8i-h2-plus-orangepi-zero.dts
+++ b/arch/arm/boot/dts/sun8i-h2-plus-orangepi-zero.dts
@@ -82,15 +82,18 @@
 
 	reg_vcc_wifi: reg_vcc_wifi {
 		compatible = "regulator-fixed";
-		regulator-min-microvolt = <3300000>;
-		regulator-max-microvolt = <3300000>;
-		regulator-name = "vcc-wifi";
-		enable-active-high;
+		regulator-name = "wifi-core";
+		regulator-min-microvolt = <1800000>;
+		regulator-max-microvolt = <1800000>;
 		gpio = <&pio 0 20 GPIO_ACTIVE_HIGH>;
+		startup-delay-us = <70000>;
+		enable-active-high;
 	};
 
 	wifi_pwrseq: wifi_pwrseq {
 		compatible = "mmc-pwrseq-simple";
+		pinctrl-names = "default";
+		pinctrl-0 = <&wifi_rst>;
 		reset-gpios = <&r_pio 0 7 GPIO_ACTIVE_LOW>;
 		post-power-on-delay-ms = <200>;
 	};
@@ -113,9 +116,11 @@
 &mmc1 {
 	pinctrl-names = "default";
 	pinctrl-0 = <&mmc1_pins_a>;
-	vmmc-supply = <&reg_vcc_wifi>;
+	vmmc-supply = <&reg_vcc3v3>;
+	vqmmc-supply = <&reg_vcc_wifi>;
 	mmc-pwrseq = <&wifi_pwrseq>;
 	bus-width = <4>;
+	max-frequency = <16000000>;
 	non-removable;
 	status = "okay";
 
@@ -125,6 +130,13 @@
 	 */
 	xr819: sdio_wifi@1 {
 		reg = <1>;
+		compatible = "xradio,xr819";
+		pinctrl-names = "default";
+		pinctrl-0 = <&wifi_wake>;
+		interrupt-parent = <&pio>;
+		interrupts = <6 10 IRQ_TYPE_EDGE_RISING>;
+		interrupt-names = "host-wake";
+/*		local-mac-address = [dc 44 6d c0 ff ee];*/
 	};
 };
 
@@ -136,6 +148,20 @@
 	status = "okay";
 };
 
+&pio {
+	wifi_wake: wifi_wake {
+		pins = "PG10";
+		function = "gpio_in";
+	};
+};
+
+&r_pio {
+	wifi_rst: wifi_rst {
+		pins = "PL7";
+		function = "gpio_out";
+	};
+};
+
 &uart0 {
 	pinctrl-names = "default";
 	pinctrl-0 = <&uart0_pins_a>;
